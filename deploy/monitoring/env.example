# Central Monitoring Configuration
# Copy to .env and fill in your values

# Grafana settings
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme
GRAFANA_ANONYMOUS=false

# Prometheus endpoints for each cluster
# These should be the external URLs to reach each cluster's Prometheus
# Format: http://<prometheus-ip-or-domain>:<port>
#
# Option 1: NodePort (if Prometheus service exposed as NodePort)
#   PROMETHEUS_LKE_URL=http://<node-ip>:30090
#
# Option 2: LoadBalancer (if Prometheus service exposed as LoadBalancer)
#   PROMETHEUS_LKE_URL=http://<lb-ip>:9090
#
# Option 3: Port-forward (for testing, run: kubectl port-forward svc/prometheus 9090:9090)
#   PROMETHEUS_LKE_URL=http://host.docker.internal:9090

PROMETHEUS_LKE_URL=
PROMETHEUS_EKS_URL=
PROMETHEUS_GKE_URL=
